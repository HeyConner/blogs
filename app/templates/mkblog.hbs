{{#if addNewBlog}}
  <h1>New Entry</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="post">Post:</label>
        {{input value=post id="post"}}
      </div>
      <div class="form-group">
        <label for="img">Image:</label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'save'}}>Upload</button>
    </form>
  </div>
  {{else}}
      <button {{action 'blogForm'}}>New Post</button>
{{/if}}
